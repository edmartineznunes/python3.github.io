#!/bin/bash

PATH=$PATH:"/opt/leitor_pdf"

INFO="""
======================================================================
 Programa..: $(basename $0)     Criado em....: 01/03/2025 
 Pacote Deb: leitorpdf    Atualizado em: 05/03/2025
 Linguagem.: Python3
======================================================================
   
"""
echo -e "\033[36m $INFO \033[m"

HOME_HELP="\033[00;01mNOME\033[m\n\t$(basename $0)\n"

DESCRICAO_HELP="\033[00;01mDESCRIÇÃO\033[m\n\tEsse programa gera um relatório em pdf da pontuação dos agentes ao lono dos 12 meses.\n"

PARA_HELP="\033[00;01mPARAMETROS\033[m\n
\t-h -help Exibe essa tela de ajuda e sai.
\t-v --version Exibe a versão do Programa e sai.
\t-sh Cabeçalho para um programa em shell script.
\t-py Cabeçalho para um programa em python.\n"



EXEM_HELP="\033[00;01mEXEMPLO DE USO\033[m\n
\t~$ decimo14 -v ou --version 
\t~$ decimo14 -h ou --help"

HELP="$NOME_HELP\n$DESCRICAO_HELP\n$PARAHELP\n$EXEM_HELP"
VERSION="Versão 0.3"

case $1 in
        -h | --help) ## Exibe ajuda do programa
                echo -e "$HELP"
                exit 0
        ;;
        -v | --version) ## Exibe a versão do programa
                echo "$VERSION"
                exit 0
        ;;
        *)## Erro de opção desconhecida
                echo "Erro: opção $1 desconhecida!"
                exit 1
esac


python3 /opt/leitor_pdf/pdfreader.py


echo -e "\n\033[36m ( Finalizado programa Python !!! ) \033[m"
